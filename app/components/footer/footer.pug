mixin footer()
  +b.footer&attributes(attributes)
    .container
      each section in (en ? getData('footer')[1] : getData('footer')[0])
        +e.col
          +e.H4.title!= section.title
          +e.UL.list
            each item in section.links
              if !item.github
                +e.LI.item
                  +e.A.link(href=item.href)!= item.name
              else
                +e.LI.item
                  +e.A.link(href="https://github.com/verstaburo" target="_blank")
                    +icon('github')


      +e.col._info
        +e.logo
          +icon('logo')

        +e.copyright
          p!= en ? '© Versta, Front-End Development Bureau, 2016-2019' : '© Versta, Бюро фронтенд-разработки, 2016-2019'
          p!= en ? 'SP Gorokhov G.V., OGRNIP 314632005700037' : 'ИП Горохов Г. В., ОГРНИП 314632005700037'
