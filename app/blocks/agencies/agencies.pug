mixin agencies()
  +b.agencies&attributes(attributes)
    +e.slider.js-slider-agencies
      .swiper-wrapper
        each agency in getData('agencies')
          +e.IMG.agency.swiper-slide(src=agency.image)

    +e.content-slider.js-slider-agencies-content
      .swiper-wrapper
        each agency in getData('agencies')
          +e.content.swiper-slide
            +e.A.link(href=agency.link)
              +icon('link')
              span!= agency.link
            +e.P.text!= agency.text

            if agency.letter
              +e.A.letter(href=agency.letter).js-fancybox
                img(src=agency.letter)
                span Testimonial letter

